<!DOCTYPE html>
<html>
<head>

    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <title>Dashboard</title>
    
   
</head>
<body>

    <div class="row">
        <div class="col-lg-2-md-2 col-sm-2 col-xs-2 btn btn-success" style="height: 900px; border: 1px solid pink; background-color: lightpink">

            <div class="list-group">

                <div class="list-group-item">@Html.ActionLink("Add_Category", "Add_Category", new { @class = "list-group-item" })</div>
                <div class="list-group-item">
                    @Html.ActionLink("AddQuestions", "AddQuestions", new { @class = "list-group-item" })
                </div>
                <div class="list-group-item">
                    @Html.ActionLink("Reports", "Dashboard", new { @class = "list-group-item" })
                </div>

            </div>


            <div class="list-group-item">
                @Html.ActionLink("LogOut", "LogOut", new { @class = "list-group-item" })
            </div>

        </div>


        <div class="col-lg-10-md-10 col-sm-10 col-xs-10" style="height:900px;border:1px solid pink">

            @RenderBody()

        </div>
    </div>
</body>
</html>
