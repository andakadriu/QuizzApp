@model QuizA.Models.tbl_admin

@{
    ViewBag.Title = "tlogin";
}

<style>
    body{
        background-color:lightpink;
       
    }
</style>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <br />
    <h4 style="text-align:center;font-size:50px;color:floralwhite">Login as Admin</h4><br /><br /><br /><br />
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.ad_name, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.ad_name, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.ad_name, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.ad_pass, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.PasswordFor(model => model.ad_pass, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.ad_pass, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">

            <input type="submit" value="LogIn" class="btn btn-default" style="background-color: hotpink; border: 1px solid hotpink" />
        </div>
    </div> <br />
</div>
}

<p style="color:red">@ViewBag.msg</p>

<div>
   
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
