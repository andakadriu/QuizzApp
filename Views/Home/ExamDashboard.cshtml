
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />

    <style>
        body {
            background-image: url("/Content/img/quizbackground.jpg");
            background-size: cover;
        }
    </style>
    <title>ExamDashboardroomrd</title>


</head>
<body>
    @if (ViewBag.error !=null)
            {
                <div class="alert alert-danger">
                    <strong>Error!</strong>@ViewBag.error
                </div>
            }
    @using (Html.BeginForm()) 
    {

    <div class="container">
        <br /><br /><br /><br />
        <h1 style="text-align: center; color: palevioletred">Enter room number</h1>
        <br /><br />
        <input type="text" id="room" name="room" placeholder="Room Number" class="form-control" /><br />

        <input type="submit" value="Submit" class="btn btn-block" style="background-color:palevioletred;border:1px solid palevioletred" />
    </div>
    }
</body>
</html>
