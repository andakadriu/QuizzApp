@model QuizA.Models.student

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>

    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />

    <title>sregister</title>
    <style>
        body {
            background-color: lightpink;
        }
    </style>

</head>
<body>

    <div class="container-fluid">
        <div class="row">


            <div class="col-lg-8 col-md-8 col-sm-8">
                @if (ViewBag.msg != null)
                {
                    <div class="alert alert-danger">
                        <strong>Error!</strong> @ViewBag.msg
                    </div>
                }
                <h2 style="text-align:center;font-size:50px;color:floralwhite">Student Registration </h2><br /><br />

                <div class="container" style="width:40%">

                    @using (@Html.BeginForm("sregister", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {



                        <div class="form-group">
                            <label for="email" style="color:deeppink">Email:</label>
                            @* <input type="email" class="form-control" id="email" placeholder="Enter email" name="email">*@
                            @Html.TextBoxFor(x => x.std_name, htmlAttributes: new { @class = "form-control" })

                        </div>
                        <div class="form-group">
                            <label for="pwd"style="color:deeppink">Password:</label>
                            @*<input type="password" class="form-control" id="pwd" placeholder="Enter password" name="pswd">*@

                            @Html.PasswordFor(x => x.std_password, htmlAttributes: new { @class = "form-control" })
                        </div>

                        <div class="form-group">
                            <label for="pwd"style="color:deeppink">Image:</label>
                            @*<input type="password" class="form-control" id="pwd" placeholder="Enter password" name="pswd">*@
                            <input type="file" class="form-control btn btn-info" id="imgfile" name="imgfile"style="background-color: hotpink; border: 1px solid hotpink "  />

                        </div>

                        <input type="submit" value="Register Now" class="btn btn-default btn-block"style="background-color:deeppink;border:1px solid deeppink" />
                    }



                </div>

                <div class="col-lg-4 col-md-4 col-sm-4">

                </div>
            </div>



        </div>
    </div>
</body>
</html>
