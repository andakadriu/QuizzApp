@model QuizA.Models.student

@{
    ViewBag.Title = "slogin";
}
<style>
    body {
        background-color: lightpink;
    }
</style>




@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <br />
    <h4 style="text-align:center;font-size:50px;color:floralwhite">Login as Student</h4><br /><br /><br />
    
    @if (ViewBag.msg != null)
    {
        <div class="alert alert-danger">
            <strong>Error!</strong> @ViewBag.msg
        </div>
    }
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.std_name, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.std_name, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.std_name, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.std_password, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.PasswordFor(model => model.std_password, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.std_password, "", new { @class = "text-danger" })
        </div>
    </div>



    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <br />
            <input type="submit" value="LogIn" class="btn btn-default" style="background-color: hotpink; border: 1px solid hotpink" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Register", "sregister")

</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
